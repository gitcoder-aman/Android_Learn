<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FF6D00"/>
            <stroke android:color="#AA00FF"
                android:width="4dp"
                android:dashWidth="11dp"
                android:dashGap="5dp"/>

            <corners android:radius="34dp"/>

<!--            when button size is wrap content-->
            <size android:width="200dp"
                android:height="200dp"/>

            <gradient android:startColor="#2196F3"
                android:endColor="#FF9800"
                android:angle="100"
                android:type="radial"
                android:gradientRadius="100dp"
                android:centerX="1"
                android:centerY="0"/>
        </shape>
    </item>
</selector>